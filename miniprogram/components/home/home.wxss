/* components/homePage/homePage.wxss */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
.text-ellipsis{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.home-container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.sort-list {
  padding: 0 20rpx;
}
.title-bar {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.title-bar .title{
  font-size: 32rpx;
  font-weight: bold;
} 
.title-bar .more {
  font-size: 14px;
  color: #858585;
}
.item-list {
  display: flex;
  flex-wrap: wrap;
}
.item {
  width: 230rpx;
  margin-bottom: 30rpx;
  margin-right:10rpx;
}
.item:nth-child(3n) {
  margin-right: 0;
}
.item .cover {
  width: 230rpx;
  height: 230rpx;
  border-radius: 6rpx;
}
.item .song {
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-left: 4rpx;
}
.item .singer {
  margin-top: 8rpx;
  margin-left: 4rpx;
  font-size: 12px;
  color: #919191;
}